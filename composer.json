{
    "name": "mouf/mvc.bce",
    "description": "BCE is made to make your live easy. It will help you in building forms very quickly, handles form rendering, both client and server-side validation, and persistance.",
    "keywords": ["form", "crud", "form builder", "bean"],
    "homepage": "https://github.com/thecodingmachine/mvc.bce",
    "type": "mouf-library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Nguyen",
            "email": "k.nguyen@thecodingmachine.com",
            "homepage": "http://mouf-php.com"
        }
    ],
    "require": {
    	"php": ">=5.3.0",
    	"mouf/utils.common.validators": ">=3.0-dev,<4.0",
    	"mouf/utils.common.getvars": ">=2.0-dev,<3.0",
		"mouf/utils.common.formatters": ">=3.0-dev,<4.0",
		"mouf/database.dao-interface": ">=2.0-dev,<3.0",
		"mouf/html.utils.weblibrarymanager": ">=2.0-dev,<3.0",
		"mouf/html.htmlelement": "~2.0",
		"mouf/database.tdbm": ">=3.0-dev,<4.0",
		"mouf/javascript.jquery.jquery": "~1.7",
		"mouf/javascript.jquery.jquery-ui": "~1",
		"mouf/javascript.jquery.jquery-validate": "~1.10"
    },
    "autoload": {
        "psr-0": {
            "Mouf": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
	     "mouf": {
			"install": [
			{
				"type": "file",
	    		"file": "src/bceInstall.php"
			}
			],
			"require-admin": [
    			"src/BCEAdmin.php"
    		],
			"doc": [
                {
                    "title": "Quick Start",
                    "url": "doc/quickstart.md"
                },
                {
                    "title": "Advanced Forms",
                    "url": "doc/advanced.md"
                }, {
                    "title": "Advanced Example",
                    "url": "doc/advanced_example.md"
                }
            ]
		}
    }
}
